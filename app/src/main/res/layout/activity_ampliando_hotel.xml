<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hoteles"
    tools:context=".AmpliandoHotel">

    <TextView
        android:id="@+id/NombreAmpliandoHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOSTAL CANO NEVERA"
        android:textAlignment="center"
        android:textColor="@color/cornflowerblue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <ImageView
        android:id="@+id/FotoAmpliandoHotel"
        android:layout_width="215dp"
        android:layout_height="180dp"
        android:src="@drawable/canonevera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NombreAmpliandoHotel"
        app:layout_constraintVertical_bias="0.042" />

    <TextView
        android:id="@+id/descripcioAmpliandoHotel"
        android:layout_width="165dp"
        android:layout_height="180dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce vestibulum quam nec justo efficitur, a ultrices eros tristique. Nulla facilisi. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Nulla facilisi. Nullam ac nunc eu elit aliquet aliquam."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toEndOf="@id/FotoAmpliandoHotel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <TextView
        android:id="@+id/precioHotelAmpliando"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="250.000"
        android:textAlignment="center"
        android:textColor="@color/cornflowerblue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.855"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcioAmpliandoHotel"
        app:layout_constraintVertical_bias="0.031" />

    <TextView
        android:id="@+id/telefonoHotelAmpliando"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="3255036829"
        android:textAlignment="center"
        android:textColor="@color/cornflowerblue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioHotelAmpliando"
        app:layout_constraintVertical_bias="0.021" />

    <ImageView
        android:id="@+id/iconHotelAmpliando"
        android:layout_width="84dp"
        android:layout_height="50dp"
        android:src="@drawable/recompensa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FotoAmpliandoHotel"
        app:layout_constraintVertical_bias="0.031" />

    <ImageView
        android:id="@+id/icon2HotelAmpliando"
        android:layout_width="84dp"
        android:layout_height="50dp"
        android:src="@drawable/iconoampliandohotel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iconHotelAmpliando"
        app:layout_constraintVertical_bias="0.019" />

    <ImageView
        android:id="@+id/imagen2HotelAmpliando"
        android:layout_width="200dp"
        android:layout_height="155dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/hostalcanonevera2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcioAmpliandoHotel"
        app:layout_constraintVertical_bias="0.459" />

    <RatingBar
        android:id="@+id/valoracionHotelAmpliando"
        android:layout_width="246dp"
        android:layout_height="58dp"
        android:progressBackgroundTint="@color/gray"
        android:progressTint="@color/cornflowerblue"
        android:rating="1.2"
        android:textAlignment="center"
        android:textSize="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen2HotelAmpliando"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewAmpliandoHotel"
        android:layout_width="200dp"
        android:layout_height="155dp"
        android:text="comentario"
        android:textColor="@color/white"
        app:cardBackgroundColor="@color/cornflowerblue"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoHotelAmpliando"
        app:layout_constraintVertical_bias="0.084">

        <TextView
            android:id="@+id/textoComentario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp"
            android:text="Contenido del comentario aquÃ­" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>