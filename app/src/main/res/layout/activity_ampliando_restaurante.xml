<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hoteles"
    tools:context=".Ampliando_restaurante">

    <TextView
        android:id="@+id/NombreAmpliandoRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HOSTAL CANO NEVERA"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/cornflowerblue"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.120" />

    <ImageView
        android:id="@+id/FotoAmpliandoRes"
        android:layout_width="290dp"
        android:layout_height="210dp"
        android:src="@drawable/canonevera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NombreAmpliandoRes"
        app:layout_constraintVertical_bias="0.055" />

    <TextView
        android:id="@+id/descripcioAmpliandoRes"
        android:layout_width="355dp"
        android:layout_height="100dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce vestibulum quam nec justo efficitur, a ultrices eros tristique. Nulla facilisi. Vestibulum ante ipsum primis in faucibus orci luctus et ultrices posuere cubilia Curae; Nulla facilisi. Nullam ac nunc eu elit aliquet aliquam."
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/FotoAmpliandoRes"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/precioAmpliandoRes"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="250.000"
        android:textAlignment="center"
        android:textColor="@color/cornflowerblue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcioAmpliandoRes"
        app:layout_constraintVertical_bias="0.061" />

    <TextView
        android:id="@+id/telefonoAmpliandoRes"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:text="3255036829"
        android:textAlignment="center"
        android:textColor="@color/cornflowerblue"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.459"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descripcioAmpliandoRes"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/iconAmpliandoHotel"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/iconoampliandohotel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/precioAmpliandoRes"
        app:layout_constraintVertical_bias="0.429" />

    <Button
        android:id="@+id/botonReservarHoteles"
        android:layout_width="255dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/cornflowerblue"
        android:text="RESERVAR"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.82"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/telefonoAmpliandoRes"
        app:layout_constraintVertical_bias="0.138" />

</androidx.constraintlayout.widget.ConstraintLayout>